@model IEnumerable<MassageStudio.Application.ApplicationUser.Dtos.ApplicationUserListedDto>

@{
    ViewData["Title"] = "Zarządzaj";
    int counter = 1;
    int getID()
    {
        return counter++;
    }
}

<h1>Użytkownicy</h1>

<table class="table table-striped ">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                kontakt
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @getID()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td class="text-center">
            <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Name" asp-route-lastName="@item.LastName">Zarządzaj</a>
            </td>
        </tr>
}
    </tbody>
</table>

