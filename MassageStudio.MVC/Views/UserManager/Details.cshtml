@model MassageStudio.Application.ApplicationUser.Dtos.ApplicationUserDetailsDto

@{
    ViewData["Title"] = "Szczegóły";
    bool isAdmin = Model.Roles.Contains("Admin");
    bool isMasseur = Model.Roles.Contains("Masseur");
}
@Html.Partial("_ReturnPartial", "Szczegóły")

<hr />
<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            <a href="mailto:@Model.PhoneNumber">
            @Html.DisplayFor(model => model.Email)
            </a>
        </dd>
        <dt class="col-sm-2">
            Kontakt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<hr />
<div class="row container-sm">
    @if (isAdmin)
    {
        <a class="col-lg-2 col-6 btn btn-danger m-1" asp-action="DeleteAdmin" asp-route-id="@Model.Id">Usuń role admina</a>
    }
    else

    {
        <a class="col-lg-2 col-6 btn btn-outline-danger m-1" asp-action="UpgradeAdmin" asp-route-id="@Model.Id">nadaj role admina</a>
    }
    @if (isMasseur)
    {
        <a class="col-lg-2 col-6 btn btn-info m-1" asp-action="DeleteMasseur" asp-route-id="@Model.Id">Usuń role masażysty</a>
    }
    else
    {
        <a class="col-lg-2 col-6 btn btn-outline-info m-1" asp-action="UpgradeMasseur" asp-route-id="@Model.Id">nadaj role masażysty</a>
    }
    <br />
    <div class="h-100"></div>
        <a class="btn btn-dark col-lg-2 col-6 mt-2 mx-1" asp-action="Delete" asp-route-id="@Model.Id">Usuń użytkownika</a>
</div>
