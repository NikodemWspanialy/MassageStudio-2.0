@model MassageStudio.Application.Massages.Dtos.EditMassageDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MassageDetailsDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* ID *@
            <input asp-for="Id" name="Id" class="control-label"/>
            @* Date *@
            <div class="form-group my-2">
                <label asp-for="Date" class="control-label">termin</label>
                <input asp-for="@Model.Date" class="form-control" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
            @* Free *@
            <div class="form-group form-check my-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.Free" /> @Html.DisplayNameFor(model => model.Free)
                </label>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="my-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
